<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout2"
    tools:context="com.redux.kumardivyarajat.quiz.QuizGameActivity"
    android:background="#80ffcede">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false">

    </ScrollView>

    <TextView
        android:layout_width="340dp"
        android:layout_height="144dp"
        android:id="@+id/question2"
        android:layout_marginTop="63dp"
        android:textSize="25sp"
        android:textColor="#ff000000"
        android:textStyle="italic"
        android:gravity="center_vertical|center_horizontal" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answers_radiogroup_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/submit_2"
        android:layout_below="@+id/question2">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionA_2"
            android:textSize="20dp"
            android:layout_weight="1"

            android:textStyle="bold|italic"
            android:drawablePadding="30dip"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionB_2"
            android:layout_weight="1"

            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:drawablePadding="30dip"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionC_2"
            android:textSize="20dp"
            android:layout_weight="1"

            android:textStyle="bold|italic"
            android:drawablePadding="30dip"
            android:elegantTextHeight="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/optionD_2"
            android:layout_weight="1"

            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:drawablePadding="60dip"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="#807089ff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer2"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:textStyle="bold|italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
