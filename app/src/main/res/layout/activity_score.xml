<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.redux.kumardivyarajat.quiz.ScoreActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/images"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageView"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/q1_score"
        android:layout_above="@+id/q2_score"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question2"
        android:id="@+id/textView10"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/q2_score"
        android:layout_above="@+id/textView12"
        android:layout_alignLeft="@+id/q3_score"
        android:layout_alignStart="@+id/q3_score" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question3"
        android:id="@+id/textView12"
        android:layout_toStartOf="@+id/final_score"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/final_button_views"
        android:layout_alignEnd="@+id/final_button_views" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/q3_score"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignLeft="@+id/q4_score"
        android:layout_alignStart="@+id/q4_score" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question4"
        android:id="@+id/textView14"
        android:layout_toStartOf="@+id/imageView"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/q4_score"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/q5_score"
        android:layout_alignStart="@+id/q5_score" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question5"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_alignRight="@+id/final_button_views"
        android:layout_alignEnd="@+id/final_button_views" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/q5_score"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/q1_score"
        android:layout_alignStart="@+id/q1_score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take another Quiz"
        android:id="@+id/final_button_new_game"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your response"
        android:id="@+id/final_button_views"
        android:layout_below="@+id/final_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/final_score"
        android:textColor="#ffff601f"
        android:gravity="center|left"
        android:layout_above="@+id/final_button_new_game"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textSize="35sp" />

</RelativeLayout>
