<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Username"
        android:id="@+id/email"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/pword"
        android:layout_alignStart="@+id/pword" />
    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/login"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/registerbtn"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Register"
        android:id="@+id/registerbtn"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/passres"
        android:layout_toStartOf="@+id/pword"
        android:layout_toLeftOf="@+id/pword" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/loginErrorMsg"
        android:textColor="#000000"
        android:layout_below="@+id/passres"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Email"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/pword"
        android:layout_alignRight="@+id/passres"
        android:layout_alignEnd="@+id/passres" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pword"
        android:hint="Password"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/pworda"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Password"
        android:id="@+id/pworda"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="73dp"
        android:layout_above="@+id/login"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Forgot Password"
        android:id="@+id/passres"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>